        <div class="relativation">
            <div class="header-navbar-boomerang">
                <nav class="navbar affix" role="navigation">
                    <div class="header-info" style="width: 100%; padding: 13px">
                        <div class="container">
                            <div class="info-bar">
                                <div class="infos-contato">
                                    <i class="fab fa-whatsapp"></i>
                                    <i class="fab fa-facebook-f"></i>
                                    <i class="fab fa-instagram"></i>
                                    <i class="fab fa-youtube"></i>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="container">
                        <div class="menu row">
                            <img style="width: 130px" src="~/Images/Logo/logo_pousada.png" />
                            <div class="opcoes-menu">
                                <span class="opc-menu" style="padding: 25px">
                                    <a style="color:white" href="/Home/Home_Index">Início</a>
                                </span>
                                <!--<span style="padding-right: 10px">
                                    <a>Reservar</a>
                                </span>-->
                                <span class="opc-menu"  style="padding-right: 10px">
